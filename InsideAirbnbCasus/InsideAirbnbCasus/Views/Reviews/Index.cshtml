@model IEnumerable<InsideAirbnbCasus.Models.Reviews>

@{
    ViewData["Title"] = "Index";
}

<h1>Reviews</h1>

<ul>
    <li>@Html.ActionLink("SingleProperty", "SingleProperty", "Reviews")</li>
    <li>@Html.ActionLink("SingleRelatedProperty", "SingleRelatedProperty", "Reviews")</li>
    <li>@Html.ActionLink("TransformData", "TransformData", "Reviews")</li>
    <li>@Html.ActionLink("FilteringName", "FilteringName", "Reviews", new { name = "aaron" })</li>
    <li>@Html.ActionLink("OrderName", "OrderName", "Reviews")</li>
    <li>@Html.ActionLink("GroupName", "GroupName", "Reviews")</li>
    <li>@Html.ActionLink("Join", "Join", "Reviews")</li>
</ul>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ReviewerId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ReviewerName)
            </th>
            <th>
                <div>@Html.DisplayNameFor(model => model.Comments)</div>
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Listing)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Date)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ReviewerId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ReviewerName)
                </td>
                <td>
                    <div style="text-overflow:ellipsis; overflow: hidden; white-space: nowrap; width:350px">@Html.DisplayFor(modelItem => item.Comments)</div>
                </td>
                <td>
                    <div style="text-overflow:ellipsis; overflow: hidden; white-space: nowrap; width:300px">@Html.DisplayFor(modelItem => item.Listing.Access)</div>
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
